<% if policy(Collaborator.new).create? %>
	<div class="collaborator">

		Add a collaborator to your private wiki: 
		<%= form_for Collaborator.create do |e| %>
			<div class="form-group">
				<%= e.label :email %>
				<%= e.text_field :email, class: 'form-control', placeholder: "Enter collaborator user email" %>
			</div>
		
			<div class="form-group">
				<%= e.submit "Add", class: 'btn btn-success' %>
			</div>
		<% end %>
		
		Current private wiki collaborators:
		<%# Collaborators.each do |clb| %>
			<%# clb_usr = User.find(clb) %>
			<small><%#= clb_usr %></small>
		<%# end %>

	</div>
<% end %>